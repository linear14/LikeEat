<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.LikeEat" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.LikeEat" parent="Base.Theme.LikeEat"/>

    <style name="Theme.LikeEat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="TextBigTitle">
        <item name="android:textAppearance">?attr/textAppearanceHeadline1</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">@dimen/text_size_big_title</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextTitle">
        <item name="android:textAppearance">?attr/textAppearanceHeadline5</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextBigger">
        <item name="android:textAppearance">?attr/textAppearanceHeadline5</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">@dimen/text_size_bigger</item>
        <item name="android:textColor">@color/black01</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextBig">
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="TextNormal">
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="TextSmall">
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="Button">
        <item name="android:textAppearance">?attr/textAppearanceHeadline5</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:padding">@dimen/margin_half</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
    </style>

    <style name="TextButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">?attr/textAppearanceHeadline5</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:padding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="TextListBig">
        <item name="android:textAppearance">?attr/textAppearanceListItem</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextListNormal">
        <item name="android:textAppearance">?attr/textAppearanceListItemSmall</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:backgroundTint">?attr/colorSurface</item>
        <item name="android:minWidth">@dimen/floating_btn_min_width</item>
        <item name="android:minHeight">@dimen/floating_btn_min_height</item>
        <item name="shapeAppearanceOverlay">@style/SmallComponentRect</item>
    </style>

    <style name="SmallComponentRect" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="ExtendedFloatingActionButtonOnlyText" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:backgroundTint">?attr/colorSurface</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:minWidth">@dimen/floating_btn_min_width</item>
        <item name="android:minHeight">@dimen/floating_btn_min_height</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="HorizontalDivider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
    
    <style name="TextEditMenu">
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ImageButton">
        <item name="android:minWidth">@dimen/image_btn_min_width</item>
        <item name="android:minHeight">@dimen/image_btn_min_height</item>
        <item name="android:inset">0dp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="Chip" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_selector</item>
        <item name="android:textColor">@color/chip_text_selector</item>
        <item name="chipMinHeight">40dp</item>
    </style>

    <style name="ConfirmButton">
        <item name="android:textColor">?attr/colorSurface</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/item_border_round_shadow</item>
        <item name="android:backgroundTint">?attr/colorOnSurface</item>
        <item name="android:drawableTint">?attr/colorSurface</item>
        <item name="android:minHeight">@dimen/confirm_btn_min_height</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

</resources>