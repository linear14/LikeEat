<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.LikeEat" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.LikeEat" parent="Base.Theme.LikeEat"/>

    <style name="Theme.LikeEat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="TextTitle">
        <item name="android:textAppearance">?attr/textAppearanceHeadline5</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="TextBig">
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="TextNormal">
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="TextSmall">
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="Button">
        <item name="android:textAppearance">?attr/textAppearanceHeadline5</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:padding">@dimen/margin_half</item>
    </style>

    <style name="TextListBig">
        <item name="android:textAppearance">?attr/textAppearanceListItem</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextListNormal">
        <item name="android:textAppearance">?attr/textAppearanceListItemSmall</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="ExtendedFloatingActionButtonOnlyText" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:backgroundTint">?attr/colorSurface</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">10dp</item>
    </style>

    <style name="HorizontalDivider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
    
    <style name="TextEditMenu">
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>