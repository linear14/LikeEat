<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="review"
            type="com.fund.likeeat.data.Review" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                android:background="@null"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="@dimen/margin_double"
                android:layout_marginLeft="@dimen/margin_double"/>

            <TextView
                android:id="@+id/text_place_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{review.place_name}"
                app:layout_constraintTop_toBottomOf="@id/btn_back"
                android:layout_marginTop="@dimen/margin_double"
                android:layout_marginLeft="@dimen/margin_double"
                android:layout_marginRight="@dimen/margin_double"
                style="@style/TextBigTitle"/>

            <TextView
                android:id="@+id/text_place_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{review.address_name}"
                app:layout_constraintTop_toBottomOf="@id/text_place_name"
                android:layout_marginTop="@dimen/margin_half"
                android:layout_marginLeft="@dimen/margin_double"
                android:layout_marginRight="@dimen/margin_double"
                style="@style/TextNormal"/>

            <Button
                android:id="@+id/btn_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/category"
                android:textColor="?attr/colorPrimary"
                android:drawableTop="@drawable/btn_plus_red"
                app:layout_constraintTop_toBottomOf="@id/text_place_address"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="@dimen/margin_1.5_times"
                android:layout_marginLeft="@dimen/margin_double"
                style="@style/TextButton"/>

            <CheckBox
                android:id="@+id/check_is_public"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/share"
                android:checked="@{review.isPublic}"
                android:gravity="center"
                android:button="@null"
                android:drawableTop="@drawable/ic_share_drawable_selector"
                android:drawablePadding="@dimen/margin_quarter"
                app:layout_constraintTop_toTopOf="@id/btn_category"
                app:layout_constraintLeft_toRightOf="@id/btn_category"
                android:layout_marginLeft="@dimen/margin_double"
                style="@style/TextBig"/>

            <TextView
                android:id="@+id/text_theme_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/regist_theme"
                app:layout_constraintTop_toBottomOf="@id/btn_category"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="@dimen/margin_big"
                android:layout_marginLeft="@dimen/margin_double"
                style="@style/TextTitle"/>

            <LinearLayout
                android:id="@+id/layout_theme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/text_theme_title"
                android:layout_marginTop="@dimen/margin_1.5_times">

                <View
                    style="@style/Divider"
                    android:layout_marginLeft="@dimen/margin_double"
                    android:layout_marginRight="@dimen/margin_double"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/list_theme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

                <LinearLayout
                    android:id="@+id/layout_add_theme"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/margin_double"
                    android:layout_marginRight="@dimen/margin_double">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/btn_regist_theme"
                        android:textColor="@color/colorGray"
                        android:layout_marginTop="@dimen/margin_normal"
                        android:layout_marginBottom="@dimen/margin_normal"
                        style="@style/TextBig"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/plus"
                        android:layout_marginRight="@dimen/margin_normal"/>

                </LinearLayout>

                <View
                    style="@style/Divider"
                    android:layout_marginLeft="@dimen/margin_double"
                    android:layout_marginRight="@dimen/margin_double"/>

            </LinearLayout>

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/apply"
                app:layout_constraintTop_toBottomOf="@id/layout_theme"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="@dimen/margin_big"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_marginRight="@dimen/margin_normal"
                android:layout_marginBottom="@dimen/margin_1.5_times"
                style="@style/ConfirmButton"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>