<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="review"
            type="com.fund.likeeat.data.Review" />

        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/theme_card_height"
        android:paddingHorizontal="@dimen/padding_double"
        android:onClick="@{clickListener}">


        <LinearLayout
            android:id="@+id/layout_place_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/margin_normal">

            <ImageView
                android:id="@+id/review_concept_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_fastfood_24"
                android:layout_marginLeft="@dimen/margin_half"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/margin_1.5_times">

                <TextView
                    android:id="@+id/review_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{review.place_name}"
                    tools:text="팔라피자"
                    style="@style/TextListBig"/>

                <TextView
                    android:id="@+id/review_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{review.address_name}"
                    tools:text="서울 서초구 양재천로7길 13"
                    android:layout_marginTop="@dimen/margin_one_eighth"
                    style="@style/TextListNormal"/>

            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/layout_place_name"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/margin_half"
            android:layout_marginBottom="@dimen/margin_1.5_times"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/separator_height"
            android:background="@color/black06"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
