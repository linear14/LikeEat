<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/margin_1.5_times"
        android:layout_marginLeft="@dimen/margin_double"
        android:layout_marginRight="@dimen/margin_double"
        style="@style/TextTitle"/>

    <TextView
        android:id="@+id/text_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/text_title"
        android:layout_marginTop="@dimen/margin_normal"
        android:layout_marginLeft="@dimen/margin_double"
        android:layout_marginRight="@dimen/margin_double"
        style="@style/TextNormal"/>

    <View
        android:id="@+id/divider_01"
        style="@style/Divider"
        app:layout_constraintTop_toBottomOf="@id/text_content"
        android:layout_marginTop="@dimen/margin_1.5_times"
        android:layout_marginLeft="@dimen/margin_1.5_times"
        android:layout_marginRight="@dimen/margin_1.5_times"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/alert_dialog_button_height"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/divider_01">
        
        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            style="@style/TextTitle"/>
        
        <View
            style="@style/HorizontalDivider"
            android:layout_height="@dimen/alert_dialog_button_divider_height"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            style="@style/TextTitle"/>
        
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>