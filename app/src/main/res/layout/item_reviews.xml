<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="review"
            type="com.fund.likeeat.data.Review" />
        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_normal"
        android:onClick="@{clickListener}">

        <!--<ImageView
            android:id="@+id/review_image"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:imageFromUri="@{review.imageUri}"/>-->
        
        <ImageView
            android:id="@+id/review_concept_image"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/review_name"
            app:layout_constraintBottom_toBottomOf="@id/review_address"/>

        <TextView
            android:id="@+id/review_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_big"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/margin_normal"
            app:layout_constraintStart_toEndOf="@+id/review_concept_image"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@{review.place_name}"
            tools:text="팔라피자" />

        <TextView
            android:id="@+id/review_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/review_name"
            app:layout_constraintTop_toBottomOf="@id/review_name"
            android:layout_marginTop="4dp"
            android:textSize="@dimen/text_size_normal"
            android:text="@{review.address_name}"
            tools:text="서울 서초구 양재천로7길 13" />

        <TextView
            android:id="@+id/review_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/review_address"
            android:textSize="@dimen/text_size_small"
            tools:text="3명의 핀"/>

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginEnd="4dp"
            app:layout_constraintTop_toTopOf="@id/review_name"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/review_theme_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal"
            app:layout_constraintTop_toBottomOf="@id/review_address"
            android:background="@drawable/item_fill_gray_round"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
