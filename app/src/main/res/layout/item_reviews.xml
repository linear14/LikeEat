<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="review"
            type="com.fund.likeeat.data.Review" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginVertical="16dp">

        <ImageView
            android:id="@+id/review_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/review_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/review_distance"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/review_image"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@{review.oneLineReview}"
            tools:text="팔라피자" />

        <TextView
            android:id="@+id/review_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/review_image"
            app:layout_constraintTop_toBottomOf="@id/review_name"
            android:layout_marginStart="16dp"
            android:textSize="12sp"
            tools:text="서울 서초구 양재천로7길 13" />
        
        <TextView
            android:id="@+id/review_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="12sp"
            tools:text="300m"/>

        <TextView
            android:id="@+id/review_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/review_distance"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="16sp"
            tools:text="3"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            android:src="@mipmap/ic_launcher"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toStartOf="@id/review_count"
            app:layout_constraintTop_toTopOf="@id/review_count"
            app:layout_constraintBottom_toBottomOf="@id/review_count"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
