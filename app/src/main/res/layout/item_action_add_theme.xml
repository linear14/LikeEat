<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/action_add_new_theme"
        android:layout_width="match_parent"
        android:layout_height="@dimen/theme_card_height"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingHorizontal="@dimen/padding_double">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_new_theme"
            android:textColor="@color/black03"
            android:textSize="@dimen/text_size_big"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/theme_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_add_24"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/separator2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/separator_height"
        android:background="@color/black06"
        android:layout_marginHorizontal="@dimen/margin_double"
        app:layout_constraintTop_toBottomOf="@id/action_add_new_theme"/>

</androidx.constraintlayout.widget.ConstraintLayout>