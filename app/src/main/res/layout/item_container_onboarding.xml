<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/onboarding_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="간편한 맛집등록"
        android:textSize="@dimen/text_size_on_boarding_title"
        android:textStyle="bold"
        android:textColor="@color/black01"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/onboarding_description"/>
    
    <TextView
        android:id="@+id/onboarding_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="라이크잇에서 간편하게\n맛집을 등록해보세요"
        app:layout_constraintTop_toBottomOf="@id/onboarding_title"
        app:layout_constraintBottom_toTopOf="@id/onboarding_main_image"
        android:textSize="@dimen/text_size_title"
        android:layout_marginTop="@dimen/margin_1.5_times"
        android:gravity="center"
        android:textColor="@color/black03" />
    
    <ImageView
        android:id="@+id/onboarding_main_image"
        android:layout_width="0dp"
        android:layout_height="512dp"
        app:layout_constraintTop_toBottomOf="@id/onboarding_description"
        app:layout_constraintBottom_toBottomOf="@id/action_start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="fitCenter"
        android:layout_marginTop="@dimen/margin_1.5_times"
        tools:src="@drawable/image_on_boarding_first"/>

    <ImageView
        android:id="@+id/onboarding_map_top_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image_on_boarding_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/onboarding_main_image"
        android:layout_marginTop="@dimen/margin_big"
        android:visibility="gone"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/onboarding_map_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.43"
        android:layout_marginStart="@dimen/margin_half"
        android:src="@drawable/image_on_boarding_map_owner"
        tools:visibility="visible" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/action_start"
        android:layout_width="match_parent"
        android:layout_height="@dimen/clickable_button_height"
        android:layout_marginHorizontal="@dimen/margin_normal"
        android:layout_marginVertical="@dimen/margin_1.5_times"
        android:background="@drawable/item_fill_black05_round"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/image_start"
            android:layout_width="@dimen/image_size_normal"
            android:layout_height="@dimen/image_size_normal"
            android:src="@drawable/ic_baseline_check_24"
            android:tint="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/text_start"
            app:layout_constraintHorizontal_chainStyle="packed" />

        <TextView
            android:id="@+id/text_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_normal"
            android:text="@string/start_app"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_big"
            app:layout_constraintStart_toEndOf="@id/image_start"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>