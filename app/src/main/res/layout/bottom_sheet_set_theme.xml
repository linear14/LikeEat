<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.fund.likeeat.viewmodels.OneThemeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_border_top_round"
        android:paddingBottom="@dimen/padding_normal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/theme_card_sample"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="@dimen/margin_normal"
            android:padding="12dp"
            app:layout_constraintTop_toTopOf="parent">

            <com.mikhaellopez.circleview.CircleView
                android:id="@+id/theme_icon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:colorCode="@{viewModel.theme.color}"
                app:cv_border="false"
                app:cv_shadow="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/theme_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_normal"
                android:textSize="@dimen/text_size_big"
                android:textStyle="bold"
                android:text="@{viewModel.theme.name}"
                app:layout_constraintBottom_toTopOf="@id/theme_count"
                app:layout_constraintStart_toEndOf="@id/theme_icon"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="테마 제목" />

            <TextView
                android:id="@+id/theme_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_normal"
                android:textSize="@dimen/text_size_small"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/theme_icon"
                app:layout_constraintTop_toBottomOf="@id/theme_name"
                app:reviewsCount="@{viewModel.theme.reviewsCount}"
                tools:text="100개" />

            <TextView
                android:id="@+id/theme_public"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_normal"
                android:textSize="@dimen/text_size_small"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/theme_count"
                app:layout_constraintTop_toBottomOf="@id/theme_name"
                app:isPublic="@{viewModel.theme.public}"
                tools:text="비공개"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/image_more"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/carbon_overflow_menu_horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/seperator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/theme_card_sample"
            android:background="#dfdfdf"/>

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_normal"
            android:text="공개설정"
            android:textSize="@dimen/text_size_big"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/seperator" />

        <Switch
            android:id="@+id/switch_public"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_normal"
            android:checked="@{viewModel.theme.public}"
            app:layout_constraintBottom_toBottomOf="@id/text1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/text1" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_normal"
            android:text="이름수정"
            android:textSize="@dimen/text_size_big"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text1" />

        <ImageView
            android:id="@+id/btn_edit_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/margin_normal"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintBottom_toBottomOf="@id/text2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/switch_public"
            app:layout_constraintTop_toTopOf="@id/text2" />

        <TextView
            android:id="@+id/btn_delete_theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_normal"
            android:text="삭제"
            android:textSize="@dimen/text_size_big"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text2" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
